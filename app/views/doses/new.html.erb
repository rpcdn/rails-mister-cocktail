<h1>Create a new dose for <%= @cocktail.name.capitalize %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: @ingredients %>
  <%= f.submit "Add a dose", class: "btn btn-primary" %>
<% end %>

<br>
<br>
<%= link_to 'Home', cocktails_path, class: "btn btn-primary" %>
